########################################################## message
printmsgA :
	@echo ===========================================================
	@echo Building MAIN for $(SYSTEM)
	@echo Compiler flags : $(F90FLAGS)
	@echo Linker   flags : $(LFLAGS)
	@echo ============================================================
#
###################################################### end of file
